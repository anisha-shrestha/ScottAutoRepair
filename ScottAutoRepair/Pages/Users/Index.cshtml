@page
@model ScottAutoRepair.Pages.Users.IndexModel
@{ ViewData["Title"] = "Index";
                Layout = "~/Pages/Shared/_Layout.cshtml"; }
<form>
    <div class="row">
        <div class="col-6">
            <h2 class="text-info h1 font-weight-bold">Customers List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="/Account/Register" asp-area="Identity" class="btn btn-info h2">
                <i class="fas fa-plus text-white"></i>  Create New Customer
            </a>
        </div>

        <div>
            <table class="table table-striped border text-white">
                <tr class="table-secondary text-white">
                    <th>
                        @Html.DisplayNameFor(m => m.ApplicationUserList[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ApplicationUserList[0].PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ApplicationUserList[0].Email)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model.ApplicationUserList)
                {
    <tr>
        <td>
            @Html.DisplayFor(m => item.Name)
        </td>
        <td>
            @Html.DisplayFor(m => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(m => item.Email)
        </td>
        <td>
            
        </td>
        <td>
            <a class="btn btn-primary text-white" asp-page="Edit" asp-route-Id="@item.Id">
                <i class="fas fa-edit"></i>
            </a>
            <a class="btn btn-danger text-white" asp-page="Delete" asp-route-Id="@item.Id">
                <i class="fas fa-trash-alt"></i>
            </a>
        </td>
    </tr>}
                
            </table>
        </div>
    </div>

</form>