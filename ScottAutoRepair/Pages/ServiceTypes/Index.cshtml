@page
@model ScottAutoRepair.Pages.ServiceTypes.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br/> <br/>

<div class="border-light ">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info h1 font-weight-bold">Types of Services</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Create" class="btn btn-info h2">
                <i class="fas fa-plus"></i>  Create New Service
            </a>
        </div>
    </div>
    <br/>
    <div>
        @if(Model.ServiceType.Count==0)
            {
                <p class="text-white-50 text-">There are currently no services added. Please create a new service type.</p>
            }
            else
            {
                <table class="table table-striped border" >
                    <tr class="table-secondary h3 ">
                        <th >
                            @Html.DisplayNameFor(m => m.ServiceType[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.ServiceType[0].Price)
                        </th>
                        <th></th>
                    </tr>
                    @foreach(var item in Model.ServiceType)
                {
                <tr>
                    <td class="text-white h4">
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td class="text-white h4">
                        @Html.DisplayFor(m => item.Price)
                    </td>
                    <td style="width:150px;">
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary text-white" asp-page="Edit" asp-route-Id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-success text-white" asp-page="Details" asp-route-Id="@item.Id">
                                <i class="far fa-list-alt"></i>
                            </a>
                            <a class="btn btn-danger text-white" asp-page="Delete" asp-route-Id="@item.Id">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>

                    </td>
                </tr>
                }
                </table>
            }
    </div>
</div>


